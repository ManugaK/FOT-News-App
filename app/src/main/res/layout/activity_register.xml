<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/login_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/appLogoRegister"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo_fot_connect"
            android:contentDescription="App Logo"
            android:layout_marginBottom="24dp" />

        <!-- Username Label -->
        <TextView
            android:id="@+id/usernameLabelRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="#956DC5"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:gravity="start" />

        <!-- Username Input -->
        <EditText
            android:id="@+id/usernameInputRegister"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="12dp"
            android:hint="Enter Your Username"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="16sp"
            android:inputType="text"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="16dp" />

        <!-- Password Label -->
        <TextView
            android:id="@+id/passwordLabelRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#956DC5"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:gravity="start" />

        <!-- Password Input -->
        <EditText
            android:id="@+id/passwordInputRegister"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="12dp"
            android:hint="Enter Your Password"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="16dp" />

        <!-- Confirm Password Label -->
        <TextView
            android:id="@+id/confirmPasswordLabelRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textColor="#956DC5"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:gravity="start" />

        <!-- Confirm Password Input -->
        <EditText
            android:id="@+id/confirmPasswordInputRegister"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="12dp"
            android:hint="Enter Password Again"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="16dp" />



        <!-- Email Label -->
        <TextView
            android:id="@+id/emailLabelRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#956DC5"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:gravity="start" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/emailInputRegister"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="12dp"
            android:hint="Enter Your Email"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="16sp"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="24dp" />


        <!-- Register Button -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/button_rounded_ripple"
            android:text="Register"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Login Link -->
        <TextView
            android:id="@+id/loginLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an account? Login"
            android:textColor="#B388F2"
            android:textSize="16sp"
            android:gravity="start"
            android:clickable="true"
            android:focusable="true"
             />

    </LinearLayout>
</ScrollView>
